@model PracticaU4y5.Areas.Admin.Models.AgregarViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post" action="~/Admin/Juguete/Agregar" enctype="multipart/form-data">
    <div>
        <label>Nombre:</label>
        <br />
        <br />
        <input asp-for="juguete.Nombre" id="txtNombre" required />
        <br />
        <br />
        <label>Empresa</label>
        <br />
        <br />
        <select required="required" asp-for="juguete.Idemp"
                asp-items="@(new SelectList(Model.Empresas,"Id","NombreEmpresa"))">
            <option selected="selected" value=""> Seleccionar una empresa </option>
        </select>
        <br />
        <br />

        <label>Descripcion</label>
        <br />
        <br />
        <input type="text" required asp-for="juguete.Dato.Descripcion" id="txtDescripcion" />
        <br />
        <br />
        <label>Altura</label>
        <br />
        <br />
        <input type="text" required asp-for="juguete.Dato.Altura" id="txtAltura" />
        <br />
        <br />
        <label>Peso</label>
        <br />
        <br />
        <input type="text" required asp-for="juguete.Dato.Peso" id="txtPeso" />
        <br />
        <br />
        <label>Meterial de Fabricacion</label>
        <br />
        <br />
        <input type="text" required asp-for="juguete.Dato.Material" id="txtMaterial" />
        <br />
        <br />
        <label>Imagen:</label>
        <br />      
        <input type="file" id="Archivo" name="Archivo" accept="image/jpeg" />
        <br />
        <img id="imagePreview" src="~/img/Nophoto.png" alt="Vista previa de la imagen" height="250" width="290" />

        <div class="botones">
            <p id="Error">@Html.ValidationSummary()</p>
            <input type="submit" value="Agregar" id="btnAgregar" />
            <a href="~/Admin/Juguete/">
                <input type="button" value="Cancelar" id="btnCancelar" formnovalidate="formnovalidate" />
            </a>
        </div>
    </div>
</form>
<script>
    function mostrarImagen(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.querySelector('#imagePreview').src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    document.querySelector("#Archivo").addEventListener("change", event => {
        mostrarImagen(event.target)
    });




</script>
